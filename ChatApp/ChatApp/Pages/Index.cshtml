    <div class="row p-1" id="polje">
        <div class="col-1">Create room</div>
        <div class="col-4"><input type="text" id="roomName" /></div>
        <div class="col-1"><input type="button" id="addRoom" value="Add room" /></div>
    </div>
    <div class="row p-1" id="polje">
        <div class="col-1">Join room</div>
        <!--<div class="col-4"><input type="text" id="joinRoomName" /></div>
